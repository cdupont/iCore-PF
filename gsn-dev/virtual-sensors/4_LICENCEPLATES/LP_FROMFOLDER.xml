<virtual-sensor name="LP_FROMFOLDER" priority="10">
	<processing-class>
		<class-name>gsn.vsensor.ImageRecognitionVS</class-name>
		<init-params>
			<param name="recognition">plate</param>
		</init-params>
		<output-structure>
				<field name="image" type="binary:image/jpeg" />
				<field name="decoded" type="binary:text/plain" />
		</output-structure>
	</processing-class>
	<description>This sensor reads jpg files from a specified folder and inteprets them as qr codes or licence plates
	</description>
	<life-cycle pool-size="10" />
	<addressing>
		<predicate key="metadata">image metadata</predicate>
	</addressing>
	<streams>
		<stream name="im1">
			<source alias="source1" sampling-rate="1" storage-size="1">
				<address wrapper="randomimagefile">
					<predicate key="directory">D:\Downloads\snapshots</predicate>
<!--					<predicate key="file-mask">([^\s]+(\.(?i)(jpg|png|gif|bmp))$)</predicate>-->
					<predicate key="file-mask">([^\s]+(\.(?i)(jpg))$)</predicate>
					<predicate key="extension">jpg</predicate>
					<predicate key="rate">3000</predicate>
				</address>
				<query>select * from wrapper</query>
			</source>
			<query>select * from source1</query>
		</stream>
	</streams>
</virtual-sensor>


