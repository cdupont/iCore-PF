<virtual-sensor name="SarxosRemoteCamDasdingVS7" priority="10">
	<processing-class>
		<class-name>gsn.vsensor.ImageRecognitionVS</class-name>
		<init-params>
			<param name="recognition">null</param>
		</init-params>
		<output-structure>

				<field name="image" type="binary:image/jpeg" />
				<!--				<field name="decoded" type="binary:text/plain" />-->
		</output-structure>
	</processing-class>
	<description>Dasding Radio CAM 7
	</description>
	<life-cycle pool-size="10" />
	<addressing>
		<predicate key="metadata">image metadata</predicate>
	</addressing>
	<streams>
		<stream name="Cam7">
			<source alias="remotesource" sampling-rate="1" storage-size="1">
				<address wrapper="sarxosremotecam">
					<predicate key="webcam-name">Dasding 7</predicate>
					<predicate key="address">http://www.dasding.de/ext/webcam/webcam770.php?cam=7</predicate>
					<predicate key="capture-rate">100</predicate>
					<predicate key="max-posts">-1</predicate>
					<predicate key="live-view">false</predicate>
					<predicate key="mode">pull</predicate>
					<predicate key="authentication">false</predicate>
					<predicate key="user"></predicate>
					<predicate key="password"></predicate>
				</address>
				<query>select * from wrapper</query>
			</source>
			<query>select * from remotesource</query>
		</stream>
	</streams>
</virtual-sensor>


