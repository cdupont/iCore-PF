<virtual-sensor name="VSN_ID1" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensor</class-name>
        <unique-timestamps>false</unique-timestamps>     
        <output-structure>
			<field name="temperature" type="double"  />
        </output-structure>
    </processing-class>
    <description>qui solo la temperatura di ID1 di wsnsimulator_max</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="temp1">
            <source alias="source1" sampling-rate="1" storage-size="1">
			<address wrapper="local">
			  <predicate key="query">select * from WSNSimulator_max</predicate>
		   </address>
		   <query>select * from wrapper</query>
		 </source>
            <query> select temperature from source1 where node_id=3 </query>
        </stream>
    </streams>
</virtual-sensor>


 