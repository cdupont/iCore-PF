<virtual-sensor name="Libelium_10" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensor</class-name>
        <unique-timestamps>false</unique-timestamps>     
        <output-structure>
			<field name="temperature" type="double"  />
        </output-structure>
    </processing-class>
    <description>qui solo la temperatura di ID10 di Libelium</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="temp10">
            <source alias="t10" sampling-rate="1" storage-size="1">
			<address wrapper="local">
			  <predicate key="query">select * from Libelium</predicate>
		   </address>
		   <query>select * from wrapper</query>
		 </source>
            <query> select temperature from t10 where id=10 </query>
        </stream>
    </streams>
</virtual-sensor>


 