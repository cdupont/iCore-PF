<virtual-sensor name="RandomImageVS" priority="10">
	<processing-class>
		<class-name>gsn.vsensor.BridgeVirtualSensor</class-name>
		<init-params />
		<output-structure>
				<field name="lastModified" type="bigint" />
				<field name="image" type="binary:image/jpeg" />
		</output-structure>
	</processing-class>
	<description>This sensor reads jpg files from a specified folder
	</description>
	<life-cycle pool-size="10" />
	<addressing>
		<predicate key="metadata">image metadata</predicate>
	</addressing>
	<streams>
		<stream name="im1">
			<source alias="source1" sampling-rate="1" storage-size="1">
				<address wrapper="randomimagefile">
					<predicate key="directory">D:\Foto</predicate>
<!--					<predicate key="file-mask">([^\s]+(\.(?i)(jpg|png|gif|bmp))$)</predicate>-->
					<predicate key="file-mask">([^\s]+(\.(?i)(jpg))$)</predicate>
					<predicate key="extension">jpg</predicate>
					<predicate key="rate">10000</predicate>
				</address>
				<query>select * from wrapper</query>
			</source>
			<query>select * from source1</query>
		</stream>
	</streams>
</virtual-sensor>


