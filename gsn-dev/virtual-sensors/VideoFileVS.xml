<virtual-sensor name="VideoFileVS" priority="10">
	<processing-class>
		<class-name>gsn.vsensor.OpenCVDetection</class-name>
		<init-params>
			<param name="detection">car</param>
			<param name="scale_factor">1.1</param>
			<param name="min_neigbors">1</param>
			<param name="flag">1</param>
			<param name="stream">true</param>
		</init-params>
		<output-structure>
				<field name="image" type="binary:image/jpeg" />
		</output-structure>
	</processing-class>
	<description>This sensor streams a video file as jpeg sequence of captures and detects cars
	</description>
	<life-cycle pool-size="10" />
	<addressing>
		<predicate key="metadata">video metadata</predicate>
	</addressing>
	<streams>
		<stream name="video1">
			<source alias="source1" sampling-rate="1" storage-size="1">
				<address wrapper="videofile">
					<!-- <predicate key="directory">resources/Videos</predicate> -->
					<!-- <predicate key="file">cars1.avi</predicate> -->
					<predicate key="rate">1000</predicate>
					<predicate key="loop">true</predicate>
					<predicate key="liveview">true</predicate>
				</address>
				<query>select * from wrapper</query>
			</source>
			<query>select * from source1</query>
		</stream>
	</streams>
</virtual-sensor>


