<virtual-sensor name="TemperatureCVO1" priority="10">
	<processing-class>
		<class-name>gsn.vsensor.BridgeVirtualSensor</class-name>
		<init-params />
		<output-structure> 
			<field name="AvgTemp" type="double" />
		</output-structure>
	</processing-class>
	<description>This sensor simulates temperature readings every one second.
	</description>
	<life-cycle pool-size="10" />
	<addressing>
		<predicate key="geographical"></predicate>
	</addressing>
	<storage history-size="5m" />
	<streams>
		<stream name="input">
			<source alias="source1" sampling-rate="1" storage-size="1">
				<address wrapper="local">	
				    <predicate key="name">TemperatureVO1</predicate>
				</address>
				<query>SELECT TEMPERATURE AS T1 FROM wrapper</query>
			</source>
			<source alias="source2" sampling-rate="1" storage-size="1">
				<address wrapper="local">	
				    <predicate key="name">TemperatureVO2</predicate>
				</address>
				<query>SELECT TEMPERATURE AS t2 FROM wrapper</query>
			</source>
			<query>SELECT (T1+T2)/2 AS AvgTemp FROM source1, source2</query>
		</stream>
	</streams>
		
</virtual-sensor>