<virtual-sensor name="LIBELIUM_ID20" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensor</class-name>
        <unique-timestamps>false</unique-timestamps>     
        <output-structure>
			<field name="temperature" type="double"  />
			<field name="x" type="integer"  />
        </output-structure>
    </processing-class>
    <description>qui solo la temperatura di ID20 di Libelium solo se x>0</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="temp20">
            <source alias="source1" sampling-rate="1" storage-size="1">
			<address wrapper="local">
			  <predicate key="query">select * from Libelium</predicate>
		   </address>
		   <query>select * from wrapper</query>
		 </source>
            <query> select temperature, x from source1 where id=20 and x>0 </query>
        </stream>
    </streams>
</virtual-sensor>


 